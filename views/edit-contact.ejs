<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Ubah data contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>" />
        <input
          type="hidden"
          class="form-control"
          name="oldName"
          required
          value="<%= contact.oldName || contact.nama %>"
        />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            name="nama"
            id="nama"
            required
            value="<%= contact.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            required
            value="<%= contact.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="noHP" class="form-label">noHP</label>
          <input
            type="text"
            class="form-control"
            name="noHP"
            id="noHP"
            required
            value="<%= contact.noHP %>"
          />
        </div>
        <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
      </form>
    </div>
  </div>
</div>
